<Page x:Class="ProjPL3D.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjPL3D"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Email or Username:" Grid.Row="3" Margin="149,163,535,-165"/>
        <TextBox x:Name="emailOrUsernameTextBox" Grid.Row="3" Margin="270,163,270,-165"/>
        <TextBlock Text="Password:" Grid.Row="3" Margin="149,186,535,-188"/>
        <PasswordBox x:Name="passwordBox" Grid.Row="3" Margin="270,186,270,-188"/>
        <Button Content="Login" Grid.Row="3" Margin="281,236,281,-240" Click="LoginButton_Click"/>
        <Button Content="Register" Grid.Row="3" Margin="281,261,281,-265" Click="RegisterButton_Click"/>
        <TextBlock x:Name="errorMessageTextBlock" Grid.Row="3" Foreground="Red" TextWrapping="Wrap"/>
    </Grid>
</Page>
